@page
@model SearchAFile.Web.Pages.SystemAdmins.DashboardModel

<style>

    .file-group-card {
        display: block;
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 0.5rem;
        padding: 1rem;
        height: 100%;
        transition: box-shadow 0.2s, transform 0.2s;
        cursor: pointer;
    }

        .file-group-card:hover {
            box-shadow: 0 0 0.5rem rgba(0, 0, 0, 0.15);
            transform: translateY(-2px);
        }

    .file-group-card-inner {
        display: flex;
        align-items: center;
        height: 100%;
    }

    .file-group-icon {
        width: 40px;
        height: 40px;
        object-fit: contain;
        margin-right: 1rem;
    }

    .file-group-name {
        font-size: 1rem;
        font-weight: 500;
        color: var(--bs-body-color);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

</style>

<div class="py-3">
    <div class="form-floating mx-auto" style="max-width: 30rem;">
        <select class="form-select" asp-items="@(HttpContext.Session.GetObject<List<SelectListItem>>("Companies"))" onchange="ChangeCompany(this.value);"></select>
        <label class="control-label">Companies</label>
    </div>
</div>

<div class="card">

    <div class="card-header d-flex justify-content-between align-items-center">
        <label class="fs-5 pe-3"><i class="fa-solid fa-comments cus-text-primary-no-hover"></i> File Groups</label>
        <form method="get">
            <div class="input-group">
                <input asp-for="search" class="form-control" type="search" placeholder="Search file groups..." onchange="if (this.value === '') {this.form.submit(); }" />
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
    </div>

    <div class="card-body">

        @if (Model.FileGroups != null
           && Model.FileGroups.Any())
        {
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
                @foreach (var item in Model.FileGroups)
                {
                    <div class="col">
                        <a href="/Common/Chat?id=@item.FileGroupId" class="file-group-card text-decoration-none">
                            <div class="file-group-card-inner">
                                <img src="~/FileGroups/@item.ImageUrl" alt="File Group" class="file-group-icon" />
                                <span class="file-group-name">@item.FileGroup1</span>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center text-secondary cus-no-select">
                <i>No existing file groups</i>
                <br />
                <a href="/FileGroups">
                    <i class="fa-solid fa-plus-circle text-success"></i>
                    Create a file group and upload files
                </a>
            </div>
        }
    </div>

</div>

@section Scripts {

    <script type="text/javascript">

        function ChangeCompany(id) {

            $.ajax({
                url: '/Account/ChangeCompany',
                type: 'POST',
                contentType: 'application/json',
                //data: id,
                data: JSON.stringify(id),
                success: function (response) {
                    location.reload();
                },
                error: function (xhr) {
                    window.top.ShowToast('danger', 'Error', xhr.responseText, 0, false);
                }
            });
        }

    </script>
}