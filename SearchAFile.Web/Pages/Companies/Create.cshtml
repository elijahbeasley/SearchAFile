@page
@model SearchAFile.Web.Pages.Companies.CreateModel
@{
    ViewData["Title"] = "Create Company";
}

<style>
    .form-floating:not(:last-of-type) {
        margin-bottom: 1rem; /* or whatever spacing you want */
    }
</style>

<form method="post" enctype="multipart/form-data">
    <div class="card m-auto" style="max-width: 30rem;">

        <div class="card-header">
            <label class="fs-3">@ViewData["Title"]</label>
        </div>

        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating">
                <input type="text" asp-for="Company.Company1" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Company.Company1)" />
                <label asp-for="Company.Company1" class="control-label"></label>
            </div>
            <span asp-validation-for="Company.Company1" class="text-danger"></span>

            <div class="form-floating">
                <input type="text" asp-for="Company.ContactName" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Company.ContactName)" />
                <label asp-for="Company.ContactName" class="control-label"></label>
            </div>
            <span asp-validation-for="Company.ContactName" class="text-danger"></span>

            <div class="form-floating">
                <input type="text" asp-for="Company.ContactEmailAddress" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Company.ContactEmailAddress)" />
                <label asp-for="Company.ContactEmailAddress" class="control-label"></label>
            </div>
            <span asp-validation-for="Company.ContactEmailAddress" class="text-danger"></span>

            <div class="form-floating">
                <input type="text" asp-for="Company.ContactPhoneNumber" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Company.ContactPhoneNumber)" />
                <label asp-for="Company.ContactPhoneNumber" class="control-label"></label>
            </div>
            <span asp-validation-for="Company.ContactPhoneNumber" class="text-danger"></span>
        </div>

        <div class="card-footer">
            <a asp-page="./Index" class="btn btn-outline-secondary">Back to List</a>
            &nbsp;
            <button type="submit" class="btn btn-success">
                Create
                <i class="fa-solid fa-save"></i>
            </button>
        </div>

    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
