@using Microsoft.AspNetCore.Http;
@using SearchAFile.Core.Domain.Entities;
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@{
    SystemInfo? SystemInfo = Context.Session.GetObject<SystemInfo>("SystemInfo");
    Company? Company = Context.Session.GetObject<Company>("Company");
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="icon" href="~/SystemFiles/@SystemInfo.Favicon">
    <title>@Context.Session.GetString("PageTitle") | @SystemInfo.SystemName</title>

    @* Bootstrap v5.x CSS *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    @* jQuery autocomplete box. *@
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

    @*Link for Font Awesome icons*@
    <script src="https://kit.fontawesome.com/9716da10c3.js" crossorigin="anonymous"></script>

    @* Project CSS *@
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/menu.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/bootstrap-extensions.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/cus-bg.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/cus-buttons.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/cus-text.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/font-awesome-extensions.css" rel="stylesheet" asp-append-version="true" />

    <style>
        :root {
            --primary-color: @(Company != null ? Company.PrimaryColor : SystemInfo.PrimaryColor); /* This is the main color. */
            --secondary-color: @(Company != null ? Company.SecondaryColor : SystemInfo.SecondaryColor); /* This is the accent color. */
            --primary-text-color: @(Company != null ? Company.PrimaryTextColor : SystemInfo.PrimaryTextColor); /* This is the color of text against a white, light gray, etc. background. */
            --secondary-text-color: @(Company != null ? Company.SecondaryTextColor : SystemInfo.SecondaryTextColor); /* This is the color of text against a colored background. */
        }
    </style>
</head>

<body style="background: transparent;">

    <div id="divLoading" class="cus-progress-overlay" style="display: none;">
        <div class="cus-modal-progress">
            <div class="cus-progress">
                <img alt="loading" src="~/SystemFiles/loading.gif" style="height: 100px; width: 100px;" />
            </div>
        </div>
    </div>

    <img id="imgLoading" alt="loading" src="~/SystemFiles/loading.gif" style="display: none; height: 50px; width: 50px;" />

    <main role="main">
        @RenderBody()
    </main>

    <div id="StartupJavaScript" hidden>@TempData["StartupJavaScript"]</div>

    @* jQuery v3.7.1 *@
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    @* Bootstrap v5.3.2 Bundle JS (includes Popper) *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @* Script for jQuery BlockUI. *@
    <script src="https://malsup.github.io/jquery.blockUI.js"></script>

    @* jQuery autocomplete box *@
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    @* Highcharts *@
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/data.js"></script>
    <script src="https://code.highcharts.com/modules/drilldown.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://code.highcharts.com/modules/export-data.js"></script>
    <script src="https://code.highcharts.com/modules/accessibility.js"></script>

    @* Project JavaScript *@
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/menu.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap-toasts.js" asp-append-version="true"></script>
    <script src="~/js/cookie-extensions.js" asp-append-version="true"></script>
    <script src="~/js/jquery-loading.js" asp-append-version="true"></script>
    <script src="~/js/table-sorting.js" asp-append-version="true"></script>

    @* Google Maps autofill *@
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=@Configuration["GoogleAutocompleteAPIKey"]&loading=async&libraries=places&callback=initAutocomplete"></script>
    @* <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC9U50suCLYH3cTjjGnSsGVk4GfKVHPloM&callback=initAutocomplete&libraries=places&v=weekly"></script> *@

    @await RenderSectionAsync("Scripts", required: false)

    @* Validation Scripts - These should come after jQuery validate and unobtrusive *@
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>

    @* Add validation extension IF any exist. *@
    @* <script src="~/js/validation-extensions.js" asp-append-version="true"></script> *@

    </body>
</html>