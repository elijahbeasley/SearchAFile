@page
@model SearchAFile.Web.Pages.Common.ChatModel

<style>

    .chat-body {
        max-height: calc(100vh - 14rem); /* Adjust for header/footer/form spacing */
        overflow-y: auto;
        padding: 1rem;
        /* background-color: #f8f9fa; */
        display: flex;
        flex-direction: column;
    }

    .chat-message {
        margin-bottom: 1rem;
        padding: 0.75rem;
        border-radius: 0.5rem;
        max-width: 80%;
        word-wrap: break-word;
    }

        .chat-message.user {
            align-self: flex-end;
            background-color: #d1e7dd;
            color: #0f5132;
        }

        .chat-message.bot {
            align-self: flex-start;
            background-color: #e2e3e5;
            color: #41464b;
        }

    .timestamp {
        color: #555;
        font-size: x-small;
        justify-self: right;
        margin-bottom: -0.2rem;
        padding-left: 1rem;
        white-space: nowrap;
    }

</style>

<div class="pb-3">
    <a asp-page="@HttpContext.Session.GetString("DashboardURL")" title="File Groups">
        <i class="fa-solid fa-arrow-left"></i>
        Back
    </a>
</div>

<form id="objForm" method="post">

    <div id="divValidationSummary" asp-validation-summary="All" hidden></div>

    <div class="card">

        <div class="card-header">
            <label class="fs-5"><i class="fa-solid fa-comments cus-text-primary-no-hover"></i> @Model.FileGroup.FileGroup1</label>
        </div>

        <div class="card-body chat-body" id="chatBody" style="height: 0;">
            @Html.Raw(Model.Answer)
            @* @foreach (var message in Model.Messages)
            {
                var isUser = message.Role == "user"; // or however you track it
                var cssClass = isUser ? "user" : "bot";

                <div class="chat-message @cssClass">
                    @message.Content
                </div>
            } *@
        </div>

        <div class="card-footer">
            <div class="input-group">
                <button asp-page-handler="StartNewChat" asp-route-id="@Model.Id" type="submit" class="btn btn-primary" formnovalidate>
                    <i class="fa fa-rotate-left"></i>
                    New Chat
                </button>
                <input id="txtQuestion" type="text" asp-for="Question" class="form-control" placeholder="Ask a question..." autocomplete="off" />
                <button asp-page-handler="Ask" asp-route-id="@Model.Id" id="btnSend" type="submit" class="btn btn-success">
                    Send
                    <i class="fa fa-paper-plane"></i>
                </button>
            </div>
        </div>

    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">

        window.onload = function () {

            SetHeight();
            ClearQuestion();
        }

        $(window).resize(function () {

            SetHeight();
        });

        function SetHeight(){

            // $('#chatBody').height(calculateDistanceBetweenElements('#chatBody', '#footer', 45));
            $('#chatBody').height(0);

            $('#chatBody').animate({
                height: calculateDistanceBetweenElements('#chatBody', '#footer', 15)
            }, 500); 

            $('#chatBody').scrollTop($('#chatBody')[0].scrollHeight);
        }

        $(document).on('keypress', function (event) {

            let keycode = (event.keyCode ? event.keyCode : event.which);

            if (keycode == '13') {

                event.preventDefault();
                $('#btnSend').click();
            }
                });

        // Clear the question.
        function ClearQuestion() {

            document.getElementById("txtQuestion").value = "";
            document.getElementById("txtQuestion").focus();

        }

